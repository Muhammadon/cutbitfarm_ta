@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

@{
    ViewData["Title"] = "Beranda";
}

<div class="p-5 mb-5 rounded-4 shadow-lg hero-gradient text-center">
    <div class="container py-5 position-relative">
        <h1 class="display-4 fw-bold fade-up">
            Selamat Datang di <span class="text-warning">Cutbitfarm</span>
        </h1>
        <p class="col-md-8 fs-5 mx-auto mt-3 fade-up delay-1">
            Pusat pengembangan, perawatan, dan penjualan  
            <strong>Ayam Ekor Lidi kualitas kontes terbaik di Aceh</strong>.
        </p>
        <div class="d-flex justify-content-center gap-3 mt-4 fade-up delay-2">
            <a asp-controller="Home" asp-action="Products" class="btn btn-warning btn-lg px-4 shadow">
                <i class="bi bi-cart-fill"></i> Lihat Katalog
            </a>
            <a asp-controller="Home" asp-action="Video" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-play-circle"></i> Tonton Edukasi
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card-premium p-5 h-100">
            <div class="icon-circle">
                <i class="bi bi-book"></i>
            </div>
            <h3 class="fw-bold text-success">Edukasi</h3>
            <p class="text-muted">
                Panduan beternak ayam ekor lidi dari nol hingga mahir, disusun rapi & mudah dipahami.
            </p>
            <a asp-action="Edukatif" class="btn btn-outline-success mt-2">
                Baca Panduan
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card-premium p-5 h-100">
            <div class="icon-circle">
                <i class="bi bi-clipboard-heart"></i>
            </div>
            <h3 class="fw-bold text-success">Perawatan</h3>
            <p class="text-muted">
                Tips nutrisi, kesehatan, dan kebersihan kandang agar ayam tetap prima & produktif.
            </p>
            <a asp-action="Perawatan" class="btn btn-outline-success mt-2">
                Tips Perawatan
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card-premium p-5 h-100">
            <div class="icon-circle">
                <i class="bi bi-shield-check"></i>
            </div>
            <h3 class="fw-bold text-success">Karakteristik</h3>
            <p class="text-muted">
                Kenali ciri ayam ekor lidi original dan cara membedakannya dari kualitas biasa.
            </p>
            <a asp-action="Karakteristik" class="btn btn-outline-success mt-2">
                Cek Karakteristik
            </a>
        </div>
    </div>
</div>


